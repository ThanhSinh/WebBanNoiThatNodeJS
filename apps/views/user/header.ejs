<header class="header-area clearfix">
    <!-- Close Icon -->
    <div class="nav-close">
        <i class="fa fa-close" aria-hidden="true"></i>
    </div>
    <!-- Logo -->
    <div class="logo">
        <a href="/"><img src="/public/user/img/core-img/logo.png" alt=""></a>
    </div>
    
    <!-- Amado Nav -->
    <nav class="amado-nav">
        <ul>
            <li class="<%= activePage === '/' ? 'active' : '' %>"><a href="/">Home</a></li>
            <li class="<%= activePage === '/shop' ? 'active' : '' %>"><a href="/shop">Shop</a></li>
            <li class="<%= activePage === '/cart/:id' ? 'active' : '' %>"><a href="/">Product</a></li>
            <li class="<%= activePage === '/cart-show' ? 'active' : '' %>"><a href="/cart-show">Cart</a></li>
            <li class="<%= activePage === '/Checkout' ? 'active' : '' %>"><a href="/checkout">Checkout</a></li>
         
          
            <% if (typeof username !== 'undefined') { %>
              <li><h4>Welcome <%= ten %></h4></li>
              <a href="/product/logout" class="btn amado-btn mb-15" > <i class="fa-solid fa-right-to-bracket"></i>LOGOUT</a>
            <% } else { %>
                <a href="/product/login" class="btn amado-btn mb-15" > <i class="fa-solid fa-right-to-bracket"></i>LOGIN</a>
            <% } %>
          </ul>
          
    </nav>
    <!-- Button Group -->
    <div class="amado-btn-group mt-30 mb-100">
       
        
    </div>
    <!-- Cart Menu -->
    <div class="cart-fav-search mb-100">
       
        <a href="#" class="fav-nav"><img src="/public/user/img/core-img/favorites.png" alt=""> Favourite</a>
        <a href="#" class="search-nav"><img src="/public/user/img/core-img/search.png" alt=""> Search</a>
    </div>
    <!-- Social Button -->
    <div class="social-info d-flex justify-content-between">
        <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
    </div>
</header>
