<!DOCTYPE html>
<html>
<head>
    <title>Giỏ hàng</title>
</head>
<body>
    <h1>Giỏ hàng của bạn</h1>
    <% if (cart.length === 0) { %>
        <p>Giỏ hàng trống</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Tổng cộng</th>
                </tr>
            </thead>
            <tbody>
                <% cart.forEach(function(item) { %>
                    <tr>
                        <td><%= item.product.TenSP %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.product.Gia %></td>
                        <td><%= item.product.Gia * item.quantity %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <p>Tổng tiền: <%= total %> VND</p>
    <% } %>
</body>
</html>
